# ATHENA MLOps Platform - Environment Configuration
# Copy this file to .env and update with your settings

# ============================================================================
# External Storage Configuration
# ============================================================================
# DHUMAL drive mount path (auto-detected if not specified)
# Windows: D:/, E:/, etc.
# macOS: /Volumes/DHUMAL
# Linux: /mnt/dhumal
# EXTERNAL_STORAGE_PATH=

# ============================================================================
# MLflow Configuration
# ============================================================================
MLFLOW_TRACKING_URI=sqlite:///local_storage/sqlite_db/mlflow.db
MLFLOW_ARTIFACT_ROOT=  # Auto-configured to external storage if available
MLFLOW_EXPERIMENT_NAME=default

# ============================================================================
# Ollama Configuration
# ============================================================================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b
# Path to store Ollama models (auto-configured to external storage)
# OLLAMA_MODELS_PATH=

# ============================================================================
# LangChain Configuration
# ============================================================================
LANGCHAIN_TRACING_V2=false
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=  # Optional: for LangSmith tracing
LANGCHAIN_PROJECT=athena-mlops

# ============================================================================
# Vector Store Configuration (Chroma)
# ============================================================================
CHROMA_PERSIST_DIRECTORY=local_storage/vector_db
CHROMA_COLLECTION_NAME=athena_experiments

# ============================================================================
# Embedding Model
# ============================================================================
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# ============================================================================
# API Configuration
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# ============================================================================
# Streamlit UI Configuration
# ============================================================================
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_LEVEL=INFO
LOG_DIR=logs

# ============================================================================
# Training Configuration
# ============================================================================
# Default training settings
DEFAULT_BATCH_SIZE=64
DEFAULT_LEARNING_RATE=0.001
DEFAULT_EPOCHS=10
MAX_CONCURRENT_TRAINING_JOBS=2

# ============================================================================
# Agent Configuration
# ============================================================================
AGENT_MAX_ITERATIONS=10
AGENT_TEMPERATURE=0.7
AGENT_MAX_TOKENS=2048

# ============================================================================
# Development Settings
# ============================================================================
DEBUG=false
TESTING=false
